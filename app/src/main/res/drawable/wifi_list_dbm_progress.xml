<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  <!--3个层的顺序即为显示时的叠加顺序-->  <!--背景色-->
    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@android:color/holo_green_light" />
            <corners android:radius="3dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:id="@android:id/progress" android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp" >
        <clip>
            <shape>
                <corners android:radius="3dp" />
                <solid android:color="@android:color/holo_orange_light"
                    />
            </shape>
        </clip>
    </item>
</layer-list>