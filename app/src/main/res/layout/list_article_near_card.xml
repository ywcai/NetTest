<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"
    android:background="@color/colorMainBg"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="2dp"
            android:clickable="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:background="@android:color/white"
                android:clickable="false"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/article_detail_near_title"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:text="文章标题\n标题"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/article_detail_near_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:clickable="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_login" />

                    <TextView
                        android:layout_marginRight="5dp"
                        android:id="@+id/article_detail_near_auth"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:gravity="center_vertical|left"
                        android:maxLines="1"
                        android:text="Author"
                        android:textColor="@color/colorWifiBg"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/article_detail_near_create_time"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:clickable="false"
                        android:gravity="center_vertical|right"
                        android:text="2017-12-12 00:00"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/article_detail_near_thumb"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="false"
                    android:contentDescription="缩略图"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_menu_top" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/top" />

            <TextView
                android:id="@+id/article_detail_near_top_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="13020"
                android:textColor="@color/LRed"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/msg" />

            <TextView
                android:id="@+id/article_detail_near_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="25129"
                android:textColor="@color/LGreen"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>