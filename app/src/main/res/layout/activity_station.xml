<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBg">
    <android.support.v7.widget.Toolbar
        android:id="@+id/station_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_orange_light"
        android:paddingTop="@dimen/toolbar_top"
        app:popupTheme="@style/LsAppBarOverlay"
        app:titleTextAppearance="@style/ToolbarTitleSize"
        app:titleTextColor="@android:color/white" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/station_toolbar"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/station_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxxx"
            android:scrollbars="vertical"
            android:maxLines="500"
            android:textSize="12sp"
           />


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/station_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxxx"
            android:scrollbars="vertical"
            android:maxLines="500"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_light"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/station_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxxx"
            android:scrollbars="vertical"
            android:maxLines="500"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_light"
            />
        </LinearLayout>
</RelativeLayout>



