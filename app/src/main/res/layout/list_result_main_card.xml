<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@android:color/white"
    android:gravity="center">


        <ImageView
            android:id="@+id/result_type"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:clickable="false"
            android:src="@drawable/homepage_menu_ping" />

        <TextView
            android:id="@+id/wifi_ssid"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/result_time"
            android:layout_toRightOf="@+id/result_type"
            android:clickable="false"
            android:gravity="center_vertical|left"
            android:text="别名"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_time"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:clickable="false"
            android:gravity="center_vertical|right"
            android:text="2017-12-12"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:minHeight="50dp"
            android:id="@+id/result_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifi_ssid"
            android:layout_margin="5dp"
            android:clickable="false"
            android:gravity="left|top"
            android:lineSpacingMultiplier="1.5"
            android:padding="5dp"
            android:text="remarks"
            android:textColor="@color/colorWifiBg"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/result_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/result_remarks"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:gravity="right"
            android:text="未知地点"
            android:textSize="8sp" />
    </RelativeLayout>