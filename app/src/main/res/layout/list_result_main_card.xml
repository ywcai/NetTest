<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/result_type"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/homepage_menu_ping" />

        <TextView
            android:id="@+id/wifi_ssid"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/result_time"
            android:layout_toRightOf="@+id/result_type"
            android:clickable="true"
            android:gravity="top|left"
            android:text="别名x别名x别名x别名"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_time"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:gravity="top|right"
            android:text="2017-12-12"
            android:textColor="@android:color/holo_green_light"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifi_ssid"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="left|top"
            android:lineSpacingMultiplier="2"
            android:padding="5dp"
            android:text="测试测试测试测试"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>