<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMainBg"
    android:padding="20dp">

    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/user_input_box_container"
        android:background="@android:color/white"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/user_input_post">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/user_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:maxLines="8"
            android:minLines="3"
            android:text=""
            android:textSize="14sp"
            app:met_baseColor="@color/black_de"
            app:met_bottomTextSize="10sp"
            app:met_clearButton="true"
            app:met_errorColor="@color/LRed"
            app:met_floatingLabel="none"
            app:met_floatingLabelTextSize="10sp"
            app:met_helperText="评论字数不低于5，不高于300"
            app:met_helperTextAlwaysShown="true"
            app:met_helperTextColor="@color/LOrange"
            app:met_maxCharacters="300"
            app:met_minBottomTextLines="2"
            app:met_minCharacters="5"
            app:met_underlineColor="@color/LGreen" />
    </RelativeLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/user_input_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_input_box_container"
        android:layout_alignParentRight="true"
        app:fb_defaultColor="@color/LGreen"
        app:fb_disabledColor="#CACAD9"
        app:fb_disabledTextColor="@android:color/white"
        app:fb_focusColor="#CACAD9"
        app:fb_radius="4dp"
        app:fb_text="提交"
        app:fb_textColor="@android:color/white"
        app:fb_textSize="12sp"></mehdi.sakout.fancybuttons.FancyButton>
</RelativeLayout>